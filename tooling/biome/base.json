{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"ignore": ["src/exceptions/errors.ts"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noEmptyInterface": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"useKeyWithMouseEvents": "off"
			}
		},
		"ignore": ["src/exceptions/errors.ts"]
	},
	"formatter": {
		"ignore": ["configuration-schema.json"],
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 150
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingComma": "all",
			"semicolons": "always",
			"jsxQuoteStyle": "single"
		}
	}
}